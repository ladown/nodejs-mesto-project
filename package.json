{
  "name": "nodejs-mesto-project",
  "version": "1.0.0",
  "description": "Backend для проекта Mesto, написанный при помощи NodeJS",
  "main": "dist/app.js",
  "scripts": {
    "dev": "ts-node-dev src/app.ts",
    "start": "ts-node src/app.ts",
    "build": "tsc",
    "eslint:fix": "npx eslint src/**/*.ts --fix",
    "prettier:write": "npx prettier src/**/*.ts --write",
    "lint": "npm run eslint:fix && npm run prettier:write",
    "prepare": "husky"
  },
  "author": "Egor Ermilov <egorka33rus52@gmail.com> (https://ermilovee.ru)",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "pnpm lint"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.3",
    "@types/validator": "^13.12.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "helmet": "^7.1.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "express": "^4.18.1",
    "mongoose": "^6.5.0",
    "validator": "^13.12.0"
  }
}
